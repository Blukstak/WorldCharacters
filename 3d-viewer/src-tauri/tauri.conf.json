{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "d-viewer",
  "version": "0.1.0",
  "identifier": "com.jean0.d-viewer",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5174",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "3D Model Viewer",
        "width": 1400,
        "height": 900,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self'",
        "connect-src": "'self' wss://livekit.jpsoft.io https://livekit.jpsoft.io",
        "media-src": "'self' blob: mediastream:",
        "script-src": "'self' 'unsafe-inline' 'wasm-unsafe-eval'",
        "style-src": "'self' 'unsafe-inline'",
        "img-src": "'self' data: blob:"
      },
      "devCsp": {
        "default-src": "'self'",
        "connect-src": "'self' ws://localhost:* wss://livekit.jpsoft.io https://livekit.jpsoft.io",
        "media-src": "'self' blob: mediastream:",
        "script-src": "'self' 'unsafe-inline' 'unsafe-eval' 'wasm-unsafe-eval'",
        "style-src": "'self' 'unsafe-inline'",
        "img-src": "'self' data: blob:"
      }
    },
    "withGlobalTauri": false
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
