{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Tauri Dev",
      "type": "shell",
      "command": "npm",
      "args": ["run", "tauri", "dev"],
      "options": {
        "cwd": "${workspaceFolder}/3d-viewer"
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "tauri",
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Running BeforeDevCommand.*$",
          "endsPattern": "^.*VITE.*ready.*$"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": false,
        "clear": true
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Tauri Build",
      "type": "shell",
      "command": "npm",
      "args": ["run", "tauri", "build"],
      "options": {
        "cwd": "${workspaceFolder}/3d-viewer"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "group": "build"
    }
  ]
}